<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0EFEF"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_world"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_world"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="World Icon" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="30 min"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_world"
            app:layout_constraintStart_toEndOf="@+id/icon_world"
            app:layout_constraintTop_toTopOf="@+id/icon_world" />

        <ImageView
            android:id="@+id/icon_bookmark_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintEnd_toStartOf="@+id/icon_bookmark_crown"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Bookmark Star" />

        <ImageView
            android:id="@+id/icon_bookmark_crown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintEnd_toStartOf="@+id/icon_bookmark_flag"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Bookmark Crown" />

        <ImageView
            android:id="@+id/icon_bookmark_flag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Bookmark Flag"
            android:src="@drawable/ic_star_filled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Web and Mobile Development"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_world" />

        <ImageView
            android:id="@+id/image_company_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_company_logo_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_job_title"
            android:contentDescription="Company Logo" />

        <TextView
            android:id="@+id/text_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="PURE for IT Solutions"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_company_logo"
            app:layout_constraintTop_toTopOf="@+id/image_company_logo" />

        <TextView
            android:id="@+id/text_company_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="(1012416)"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_company_logo"
            app:layout_constraintStart_toEndOf="@+id/image_company_logo"
            app:layout_constraintTop_toBottomOf="@+id/text_company_name" />

        <ImageView
            android:id="@+id/icon_views"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_eye"
            app:layout_constraintBottom_toBottomOf="@+id/text_company_id"
            app:layout_constraintStart_toEndOf="@+id/text_company_id"
            app:layout_constraintTop_toTopOf="@+id/text_company_id"
            android:contentDescription="Views Icon" />

        <TextView
            android:id="@+id/text_views_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="21 K"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_views"
            app:layout_constraintStart_toEndOf="@+id/icon_views"
            app:layout_constraintTop_toTopOf="@+id/icon_views" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@+id/text_company_id"
            app:layout_constraintEnd_toStartOf="@+id/icon_bookmark"
            app:layout_constraintTop_toTopOf="@+id/text_company_name"
            android:layout_marginEnd="16dp"
            android:contentDescription="Share" />

        <ImageView
            android:id="@+id/icon_bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmark_filled"
            app:layout_constraintBottom_toBottomOf="@+id/text_company_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_company_name"
            android:contentDescription="Bookmark" />

        <LinearLayout
            android:id="@+id/layout_requirements_row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_company_logo">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_engineering"
                    android:contentDescription="Engineering Icon" />

                <TextView
                    android:id="@+id/text_work_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Engineering"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_money"
                    android:contentDescription="Money Icon" />

                <TextView
                    android:id="@+id/text_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="100$ - 250$"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_requirements_row2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_requirements_row1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_years"
                    android:contentDescription="Years Icon" />

                <TextView
                    android:id="@+id/text_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="3 Years"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time_rem"
                    android:contentDescription="Time Remaining Icon" />

                <TextView
                    android:id="@+id/text_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="3 days rem."
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_job_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur sadipsg elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_requirements_row2" />

        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_job_description">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_tag_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Java"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_tag_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Java Script"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tag_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Bootstrap"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_expire_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Expire In : 14 days"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tags" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>